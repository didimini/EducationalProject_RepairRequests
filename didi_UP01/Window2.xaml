                    <ListBox x:Name="list" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"/>

                    <Button Content="Сохранить"  />-->
            <!--


                </Grid>
            </TabItem>-->


        </TabControl>

        <Button x:Name="nazad" Content="Выход" Margin="10" Grid.Row="2" Width="150" Click="nazad_Click"  />

    </Grid>
</Window>
